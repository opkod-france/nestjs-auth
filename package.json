{
  "name": "@opkod-france/nestjs-auth",
  "version": "0.0.0-development",
  "description": "NestJS authentication module with JWT, refresh tokens, and optional event emission",
  "author": "Opkod France",
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:fixup",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:fixup": "echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json && echo '{\"type\":\"module\"}' > dist/esm/package.json && node scripts/fix-esm-imports.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/core": "^10.0.0 || ^11.0.0",
    "@nestjs/jwt": "^10.0.0 || ^11.0.0",
    "@nestjs/passport": "^10.0.0 || ^11.0.0",
    "passport-jwt": "^4.0.0",
    "rxjs": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "@nestjs/event-emitter": {
      "optional": true
    },
    "bcryptjs": {
      "optional": true
    }
  },
  "devDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/event-emitter": "^3.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@swc/core": "^1.15.11",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^25.3.0",
    "@types/passport-jwt": "^4.0.0",
    "bcryptjs": "^3.0.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.0.0",
    "typescript": "^5.7.0",
    "unplugin-swc": "^1.5.9",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
